# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourdomain.com

# Database Configuration
# For development (SQLite - default)
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Production Database (Heroku/Railway style)
# DATABASE_URL=postgres://user:password@host:port/database

# Static Files (for production)
STATIC_ROOT=staticfiles
STATIC_URL=/static/
MEDIA_ROOT=media
MEDIA_URL=/media/

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/0

# Sentry Error Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here

# WhatsApp Configuration
# Include country code without + sign (e.g., 919999999999 for India)
WHATSAPP_NUMBER=919344998602

# Email Configuration (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=your-email@gmail.com
